
<div class="container mt-4">
  <div class="row">
    <div class="col-md-3 img">
      <img src="https://images.pexels.com/photos/1446948/pexels-photo-1446948.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=150&w=200"  alt="" class="img-rounded">
    </div>
    <div class="col-md-3 details">
      <h5><%= @user.first_name%> <%= @user.last_name %> </h5>
      <br>
        Ville : <%= link_to "#{@user.city.name}", city_path(@user.city) %>
        <i class="icon-map-marker"></i>
        <br><br>
      <p>
        Email : <%= @user.email %> 
        <br><br>
        Description: <%= @user.description %> <br><br>
        Age: <%= @user.age %>
      </p>
    </div>
  </div>
</div>
    