<h1 class="text-center mt-3">Inscription</h1>

 <% flash.each do |msg| %>

    <div class="alert alert-danger" role="alert">

    <%= msg %>

    </div>

<% end %>

    <%= form_tag url_for(action: 'create'), method: "post", class: "bg-light container fieldset mt-3 mr3 pt-3 fieldset col-lg-4 col-lg-offset-4"  do %>


        <%= text_field_tag 'first_name', @user.first_name, class: "form-control", placeholder: "Prénom" %>

         <br>

        <%= text_field_tag 'last_name', @user.last_name, class: "form-control", placeholder: "Nom" %>

         <br>

        <%= text_field_tag 'email', @user.email, class: "form-control", placeholder: "Email" %>

         <br>

        <%= password_field_tag 'password', @user.password, class: "form-control", placeholder: "Mot de passe" %>

         <br>

        <div class="form-group">

        <button type="submit" class="float-right btn btn-success">Créer</button>

    </div>

<% end %>
    


