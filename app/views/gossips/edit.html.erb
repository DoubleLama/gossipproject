 <% flash.each do |type, msg| %>

    <div class="alert alert-danger" role="alert">

    <%= msg %>

    </div>

<% end %>
    <div class="container mt-5 form-group">
        <div class= "bg-light container fieldset mt-3 mr3 pt-3 fieldset col-lg-4 ">
            <h1 class="text-center border-bottom">Editer le gossip</h1>
                <br>
                <%= form_for @gossip do |f|%>

                    <div class="form-group">

                        <label>Titre :</label>

                        <%= f.text_field :title%>

                        <br>
                        <br>

                        <label>Contenu :</label>

                        <%= f.text_area :content%>

                    </div>
                    <div class="form-group text-center">

                        <button type="submit" class="btn btn-primary">Modifier</button>

                    </div>

                <% end %>
        </div>
    </div>