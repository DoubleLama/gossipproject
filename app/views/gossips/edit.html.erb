<h1>Editer le gossip</h1>

 <% flash.each do |type, msg| %>

    <div class="alert alert-danger" role="alert">

    <%= msg %>

    </div>

<% end %>

<%= form_for @gossip do |f|%>

    <div class="form-group">

        <label>Titre :</label>

        <%= f.text_field :title%>

        <br>
        <br>

        <label>Contenu :</label>

        <%= f.text_area :content%>

    </div>
    <div class="form-group">

        <button type="submit" class="btn btn-primary">Modifier</button>

    </div>


<% end %>